        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
        window.onload = function() {
            // ì €ì¥ëœ ë°°ë„ˆ ì„¤ì • ë¶ˆëŸ¬ì˜¤ê¸°
            const savedSettings = localStorage.getItem('bannerSettings');
            if (savedSettings) {
                const settings = JSON.parse(savedSettings);
                document.getElementById('bannerTitle').value = settings.title || 'ğŸ‰ VoteSpaceì— ì˜¤ì‹  ê²ƒì„ í™˜ì˜í•©ë‹ˆë‹¤!';
                document.getElementById('bannerSubtitle').value = settings.subtitle || 'ììœ ë¡­ê²Œ ì˜ê²¬ì„ ë‚˜ëˆ„ê³  íˆ¬í‘œì— ì°¸ì—¬í•´ë³´ì„¸ìš”';
                document.getElementById('gradientStart').value = settings.gradientStart || '#9333ea';
                document.getElementById('gradientEnd').value = settings.gradientEnd || '#2563eb';
                
                if (settings.display) {
                    document.querySelector(`input[name="bannerDisplay"][value="${settings.display}"]`).checked = true;
                }
                
                updateBannerPreview();
