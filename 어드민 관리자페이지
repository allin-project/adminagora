    <script>
        let isLoggedIn = false;
        let currentAdminSection = 'dashboard';

        // 로그인 함수
        function login() {
            const id = document.getElementById('adminId').value;
            const password = document.getElementById('adminPassword').value;

            if (id === 'admin' && password === 'admin2024') {
                isLoggedIn = true;
                document.getElementById('loginScreen').classList.add('hidden');
                document.getElementById('adminDashboard').classList.remove('hidden');
                showAdminSection('dashboard');
            } else {
                alert('❌ 로그인 정보가 올바르지 않습니다!\n\n힌트: ID는 admin, 비밀번호는 admin2024 입니다.');
                document.getElementById('adminPassword').value = '';
            }
        }

        // 로그아웃 함수
        function logout() {
            if (confirm('정말 로그아웃 하시겠습니까?')) {
                isLoggedIn = false;
                document.getElementById('loginScreen').classList.remove('hidden');
                document.getElementById('adminDashboard').classList.add('hidden');
                document.getElementById('adminId').value = 'admin';
                document.getElementById('adminPassword').value = '';
            }
        }

        // 관리자 섹션 전환
        function showAdminSection(section) {
            // 모든 섹션 숨기기
            document.querySelectorAll('.admin-section').forEach(s => s.classList.add('hidden'));
            
            // 네비게이션 버튼 스타일 초기화
            document.querySelectorAll('.nav-item').forEach(btn => {
                btn.className = 'nav-item px-4 py-2 text-sm font-medium text-slate-300';
            });

            // 선택된 섹션 표시
            document.getElementById(section + 'Section').classList.remove('hidden');
            document.getElementById(section + 'Btn').className = 'nav-item px-4 py-2 text-sm font-medium active';
            
            currentAdminSection = section;
            
            // 대시보드 섹션일 때 통계 업데이트
            if (section === 'dashboard') {
                updateDashboardStats();
            }
        }

        // 실시간 통계 업데이트
        function updateDashboardStats() {
            // 실제 데이터에서 통계 계산
            const uniqueAuthors = new Set();
            let totalPosts = 0;
            let totalPolls = 0;
            
            // 메인 사이트 데이터 시뮬레이션 (실제로는 localStorage나 API에서 가져옴)
            try {
                // 로컬 스토리지에서 데이터 가져오기 시도
                const savedPosts = localStorage.getItem('sitePosts');
                const savedPolls = localStorage.getItem('sitePolls');
                const savedUsers = localStorage.getItem('siteUsers');
                
                if (savedPosts) {
                    const posts = JSON.parse(savedPosts);
                    totalPosts = posts.length;
                    posts.forEach(post => uniqueAuthors.add(post.author));
                } else {
                    // 기본 데이터 (메인 사이트의 초기 데이터)
                    totalPosts = 4; // 초기 게시글 수
                    uniqueAuthors.add('익명의 미식가');
                    uniqueAuthors.add('게임러버');
                    uniqueAuthors.add('영화광');
                    uniqueAuthors.add('요리초보');
                }
                
                if (savedPolls) {
                    const polls = JSON.parse(savedPolls);
                    totalPolls = polls.length;
                } else {
                    totalPolls = 2; // 초기 투표 수
                }
                
                if (savedUsers) {
                    const users = JSON.parse(savedUsers);
                    users.forEach(user => uniqueAuthors.add(user.name));
                }
                
            } catch (error) {
                // 기본값 사용
                totalPosts = 4;
                totalPolls = 2;
                uniqueAuthors.add('익명의 미식가');
                uniqueAuthors.add('게임러버');
                uniqueAuthors.add('영화광');
                uniqueAuthors.add('요리초보');
            }
            
            // 통계 업데이트
            document.getElementById('totalUsers').textContent = uniqueAuthors.size;
            document.getElementById('totalPosts').textContent = totalPosts;
            document.getElementById('totalPolls').textContent = totalPolls;
            document.getElementById('totalReports').textContent = '0'; // 신고는 항상 0으로 (처리완료)
        }

        // 배너 미리보기 업데이트
        function updateBannerPreview() {
            const title = document.getElementById('bannerTitle').value;
            const subtitle = document.getElementById('bannerSubtitle').value;
            const startColor = document.getElementById('gradientStart').value;
            const endColor = document.getElementById('gradientEnd').value;

            const preview = document.getElementById('bannerPreview');
            preview.style.background = `linear-gradient(135deg, ${startColor} 0%, ${endColor} 100%)`;
            
            preview.innerHTML = `
                <div class="text-center">
                    <h2 class="text-3xl font-bold mb-2">${title}</h2>
                    <p class="text-lg opacity-90 mb-4">${subtitle}</p>
                    <div class="flex justify-center gap-4">
                        <button class="bg-white text-purple-600 px-6 py-2 rounded-full font-medium">
                            🗳️ 투표 참여하기
                        </button>
                        <button class="bg-purple-500 bg-opacity-50 px-6 py-2 rounded-full font-medium">
                            📝 글 작성하기
                        </button>
                    </div>
                </div>
            `;

            // 색상 입력 필드 동기화
            document.getElementById('gradientStartText').value = startColor;
            document.getElementById('gradientEndText').value = endColor;
        }

        // 배너 설정 저장
        function saveBannerSettings() {
            const settings = {
                title: document.getElementById('bannerTitle').value,
                subtitle: document.getElementById('bannerSubtitle').value,
                gradientStart: document.getElementById('gradientStart').value,
                gradientEnd: document.getElementById('gradientEnd').value,
                display: document.querySelector('input[name="bannerDisplay"]:checked').value
            };

            // 로컬 스토리지에 저장 (실제로는 서버에 저장)
            localStorage.setItem('bannerSettings', JSON.stringify(settings));
            
            alert('✅ 배너 설정이 저장되었습니다!\n메인 사이트에 즉시 반영됩니다.');
        }

        // 색상 입력 필드 동기화
        document.getElementById('gradientStart').addEventListener('input', function() {
            document.getElementById('gradientStartText').value = this.value;
        });

        document.getElementById('gradientEnd').addEventListener('input', function() {
            document.getElementById('gradientEndText').value = this.value;
        });

        document.getElementById('gradientStartText').addEventListener('input', function() {
            document.getElementById('gradientStart').value = this.value;
        });

        document.getElementById('gradientEndText').addEventListener('input', function() {
            document.getElementById('gradientEnd').value = this.value;
        });

        // 페이지 로드 시 초기화
        window.onload = function() {
            // 저장된 배너 설정 불러오기
            const savedSettings = localStorage.getItem('bannerSettings');
            if (savedSettings) {
                const settings = JSON.parse(savedSettings);
                document.getElementById('bannerTitle').value = settings.title || '🎉 VoteSpace에 오신 것을 환영합니다!';
                document.getElementById('bannerSubtitle').value = settings.subtitle || '자유롭게 의견을 나누고 투표에 참여해보세요';
                document.getElementById('gradientStart').value = settings.gradientStart || '#9333ea';
                document.getElementById('gradientEnd').value = settings.gradientEnd || '#2563eb';
                
                if (settings.display) {
                    document.querySelector(`input[name="bannerDisplay"][value="${settings.display}"]`).checked = true;
                }
                
                updateBannerPreview();
            }
            
            // 로그인 상태라면 통계 업데이트
            if (isLoggedIn) {
                updateDashboardStats();
            }
        };
    </script>
